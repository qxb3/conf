(defvar _current_date_visible false)
(defvar _last_current_date_visible "0")

(deflisten _workspaces :inital "[]" `~/.config/eww/bar/scripts/workspaces.sh`)
(deflisten _active_window :inital "~" `~/.config/eww/bar/scripts/activewindow.sh`)
(defpoll   _current_date :interval "1s" `~/.config/eww/bar/scripts/current_date.sh`)

(defwindow bar
  :monitor 0
  :stacking "fg"
  :namespace "bar"
  :exclusive true
  :geometry (geometry
    :x 0
    :y 0
    :width "100%"
    :height "25px"
    :anchor "top center"
  )

  (centerbox
    :orientation "h"
    :class "container"

    (Left)
    (Center)
    (Right)
  )
)

;; Sections

(defwidget Left []
  (box
    :halign "start"

    (Workspaces)
  )
)

(defwidget Center []
  (eventbox
    :halign "center"
    :cursor "pointer"
    :onclick "~/.config/eww/bar/scripts/toggle_current_date.sh"

    (box
      (WindowTitle)
      (CurrentDate)
    )
  )
)

(defwidget Right []
  (box
    :halign "end"
    :space-evenly false

    (systray
      :class "systray"
      :orientation "h"
      :icon-size 16
      :space-evenly true
      :spacing 8
    )

    (box
      (eventbox :cursor "pointer"
        (button
          :class "power_menu"
          :onclick `~/.config/rofi/applets/bin/powermenu.sh`
          :timeout "30s"

          "Û∞ê•"
        )
      )
    )
  )
)

;; Widgets

(defwidget Workspaces []
  (box
    :class "workspaces"
    :space-evenly true

    (for workspace in _workspaces
      (box
        :class "workspace ${workspace.active == true ? 'active' : 'inactive'}"

        (eventbox :cursor "pointer"
          (button
            :onclick "hyprctl dispatch workspace ${workspace.name}"
            :valign "center"
            :halign "center"

            {workspace.text}
          )
        )
      )
    )
  )
)

(defwidget WindowTitle []
  (box
    :class "window_title"
    :visible {_current_date_visible == false}

    (label
      :text {_active_window.title}
      :limit-width 48
    )
  )
)

(defwidget CurrentDate []
  (box
    :class "current_date"
    :visible {_current_date_visible == true}

    (label
      :text {_last_current_date_visible}
      :visible false
    )

    (label
      :text {_current_date}
    )
  )
)
